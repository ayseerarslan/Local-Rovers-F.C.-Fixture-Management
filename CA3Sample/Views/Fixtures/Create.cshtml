@model Fixture

<h2>Add Fixture</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Venue"></label>
        <input asp-for="Venue" class="form-control" />
        <span asp-validation-for="Venue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OpponentTeam"></label>
        <input asp-for="OpponentTeam" class="form-control" />
        <span asp-validation-for="OpponentTeam" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model Fixture

<h2>Edit Fixture</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MatchId" />

    <div class="form-group">
        <label asp-for="Venue"></label>
        <input asp-for="Venue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OpponentTeam"></label>
        <input asp-for="OpponentTeam" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GoalsFor"></label>
        <input asp-for="GoalsFor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GoalsAgainst"></label>
        <input asp-for="GoalsAgainst" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
